<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    tools:context=".GoogleMapLandowners">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_gravity="center">
        <Button
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/back_btn_bg"
            android:id="@+id/btn_go_to_reg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_gravity="center">

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textfield_bg"
            android:hint="Location"
            android:maxLength="100"
            android:id="@+id/et_search_location"
            android:paddingLeft="@dimen/text_padding"
            android:digits="@string/name_inputs"
            android:maxLines="2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/search_btn_bg"
                android:id="@+id/btn_search_location"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/set_location_bg_btn"
            android:id="@+id/btn_set_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text="Tip: To use your current location don't tap anywhere on the map just click Set Location"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <fragment
            android:id="@+id/map"
            android:name="com.andremion.floatingnavigationview.sample.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
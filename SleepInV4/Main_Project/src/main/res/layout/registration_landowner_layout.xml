<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:id="@+id/btn_back_to_choice"
            android:layout_gravity="left"
            android:background="@drawable/back_btn_bg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tenant_label"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="Landowner Registration form"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="380dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textfield_bg"
                                android:hint="Lastname"
                                android:maxLength="20"
                                android:id="@+id/et_lastname"
                                android:paddingLeft="@dimen/text_padding"
                                android:digits="@string/name_inputs"
                                android:maxLines="1" />x
                    </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_gravity="center">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textfield_bg"
                                android:hint="Firstname"
                                android:maxLength="20"
                                android:paddingLeft="@dimen/text_padding"
                                android:id="@+id/et_firstname"
                                android:digits="@string/name_inputs"
                                android:layout_marginTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textfield_bg"
                                android:hint="Middlename"
                                android:maxLength="20"
                                android:paddingLeft="@dimen/text_padding"
                                android:id="@+id/et_middlename"
                                android:digits="@string/name_inputs"
                                android:layout_marginTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">
                                     <TextView
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent"
                                         android:paddingLeft="10dp"
                                         android:textSize="20sp"
                                         android:text="Gender: "/>
                                            <RadioGroup
                                                android:id="@+id/radioSex"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal">
                                                <RadioButton
                                                    android:id="@+id/radioMale"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="MALE"
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="20sp"
                                                    android:checked="true" />
                                                <RadioButton
                                                    android:id="@+id/radioFemale"
                                                    android:textSize="20sp"
                                                    android:layout_height="match_parent"
                                                    android:layout_width="match_parent"
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:text="FEMALE" />
                                            </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:textSize="20sp"
                                    android:id="@+id/tv_perinfo_label"
                                    android:text="Contact Information"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/textfield_bg"
                            android:hint="Contact Number"
                            android:maxLength="11"
                            android:paddingLeft="@dimen/text_padding"
                            android:id="@+id/et_contact_number"
                            android:digits="@string/number_inputs"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/textfield_bg"
                                android:hint="Email Address"
                                android:maxLength="30"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/text_padding"
                                android:id="@+id/et_email_address"
                                android:digits="@string/email_inputs"
                                android:layout_marginTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:textSize="17sp"
                                android:id="@+id/tv_landinfo_label"
                                android:text="Transient/Lodge Information"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/textfield_bg"
                            android:hint="Business Permit Number"
                            android:maxLength="11"
                            android:paddingLeft="@dimen/text_padding"
                            android:id="@+id/et_permit_number"
                            android:digits="@string/number_inputs"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textSize="18sp"
                        android:text="Unit Type: "/>
                    <Spinner
                        android:layout_width="115dp"
                        android:layout_height="25dp"
                        android:textSize="10sp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spinner_unit_type" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                            <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                                android:paddingTop="60dp"
                            android:text="Available units: "/>
                            <NumberPicker
                            android:layout_width="50dp"
                            android:layout_height="150dp"
                            android:id="@+id/np_available_units">
                        </NumberPicker>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/textfield_bg"
                            android:hint="Fee Per unit"
                            android:maxLength="6"
                            android:paddingLeft="@dimen/text_padding"
                            android:id="@+id/et_fee_per_unit"
                            android:digits="@string/number_inputs"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/textfield_bg"
                        android:hint="Address"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/text_padding"
                        android:id="@+id/et_land_address"
                        android:digits="@string/email_inputs"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:id="@+id/tv_userinfo_label"
                            android:text="Login Details"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:id="@+id/tv_profile_pic_label"
                            android:text="Profile Picture"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_weight="1"
                            android:id="@+id/iv_profile_picture" />
                    </LinearLayout>
                      <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp">
                          <Button
                              android:layout_width="250dp"
                              android:layout_height="50dp"
                              android:id="@+id/btn_insert_image"
                              android:layout_gravity="center"
                              android:background="@drawable/select_image_btn_bg"
                              android:layout_marginTop="10dp"/>
                      </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/textfield_bg"
                                android:hint="Username"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/text_padding"
                                android:id="@+id/et_username"
                                android:digits="@string/username_password_inputs"
                                android:layout_marginTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/textfield_bg"
                                android:hint="Password"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/text_padding"
                                android:id="@+id/et_password"
                                android:digits="@string/username_password_inputs"
                                android:layout_marginTop="5dp"
                                android:inputType="textPassword" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:paddingBottom="10dp">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textfield_bg"
                            android:hint="Confirm Password"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/text_padding"
                            android:id="@+id/et_confirm_password"
                            android:digits="@string/username_password_inputs"
                            android:layout_marginTop="5dp"
                            android:inputType="textPassword" />
                     </LinearLayout>
              </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_user_btn"
                android:layout_gravity="center"
                android:background="@drawable/register_btn_bg"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="Already registered? Login now!"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_text_goback"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>